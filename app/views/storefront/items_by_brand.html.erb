<div class="container">
	<h2><%= @brand %></h2>

	<div class="panel panel-default">
		<table class="table">
			<% @products.each do |product| %>
			<tr>
				<td width="75px"><%= image_tag product.image.url, class: "thumb" %></td>
				<td>
					<h4><%= link_to product.name, product %></h4>
					<p><%= number_to_currency(product.price) %></p>
					<p>
	          <a href='#' data-toggle="modal" data-target="#myModal_<%= product.id %>" class="more-info">
	            <span class='glyphicon glyphicon-plus'></span>More Info
	          </a>
	        </p>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
<% @products.each do |product| %>
<div class="modal fade" id="myModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
            <h4 class="modal-title" id="myModalLabel"><%= product.name%></h4>
          </div>
          <div class="modal-body">
            <p><%= image_tag product.image.url, class: "thumb" %></p>
            <p><%= number_to_currency product.price %></p>
            <p><%= product.description %></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
